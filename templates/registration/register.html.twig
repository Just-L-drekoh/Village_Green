{% extends 'base.html.twig' %}

{% block title %}Register{% endblock %}

{% block body %}
<div class="container mx-auto max-w-md px-4 py-8">
    <div class="bg-white shadow-lg rounded-lg p-6">
        <h1 class="text-2xl font-bold text-center text-gray-800 mb-6">
            Créer un compte
        </h1>

        {{ form_start(registrationForm, {'attr': {'class': 'space-y-4'}}) }}
            <div class="grid grid-cols-2 gap-4">
                {{ form_row(registrationForm.user_firstname, {'attr': {'class': 'w-full border rounded px-3 py-2 shadow-sm'}}) }}
                {{ form_row(registrationForm.user_lastname, {'attr': {'class': 'w-full border rounded px-3 py-2 shadow-sm'}}) }}
            </div>

            {{ form_row(registrationForm.user_phone, {'attr': {'class': 'w-full border rounded px-3 py-2 shadow-sm'}}) }}
            {{ form_row(registrationForm.email, {'attr': {'class': 'w-full border rounded px-3 py-2 shadow-sm'}}) }}
            {{ form_row(registrationForm.plainPassword, {'attr': {'class': 'w-full border rounded px-3 py-2 shadow-sm'}}) }}

            <div class="flex items-center">
                {{ form_widget(registrationForm.agreeTerms, {'attr': {'class': 'mr-2'}}) }}
                {{ form_label(registrationForm.agreeTerms, 'J\'accepte les conditions') }}
            </div>

            <button type="submit" class="w-full bg-indigo-600  py-2 rounded shadow-md hover:bg-indigo-700">
                Créer un compte
            </button>
        {{ form_end(registrationForm) }}
    </div>
</div>
{% endblock %}