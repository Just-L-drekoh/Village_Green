{% extends 'base.html.twig' %}

{% block title %}Se connecter{% endblock %}

{% block body %}
<div class="container mx-auto max-w-md px-4 py-8">
    <div class="bg-white shadow-lg rounded-lg p-6">
        {% if error %}
            <div class="bg-red-100 text-red-800 p-4 mb-4 rounded">
                {{ error.messageKey|trans(error.messageData, 'security') }}
            </div>
        {% endif %}

        {% if app.user %}
            <div class="mb-4 text-center">
                Vous êtes connecté en tant que <strong>{{ app.user.userIdentifier }}</strong>. 
                <a href="{{ path('app_logout') }}" class="text-indigo-600 hover:underline">Se déconnecter</a>
            </div>
        {% endif %}

        <h1 class="text-2xl font-bold text-center text-gray-800 mb-6">
            Connexion
        </h1>

        <form method="post" class="space-y-4">
            <div>
                <label for="inputEmail" class="block text-gray-700 font-medium">Adresse e-mail</label>
                <input type="email" value="{{ last_username }}" name="email" id="inputEmail"
                       class="w-full border rounded px-3 py-2 shadow-sm focus:ring-indigo-500 focus:border-indigo-500"
                       autocomplete="email" required autofocus>
            </div>
            <div>
                <label for="inputPassword" class="block text-gray-700 font-medium">Mot de passe</label>
                <input type="password" name="password" id="inputPassword"
                       class="w-full border rounded px-3 py-2 shadow-sm focus:ring-indigo-500 focus:border-indigo-500"
                       autocomplete="current-password" required>
            </div>

            <input type="hidden" name="_csrf_token" value="{{ csrf_token('authenticate') }}">

            <button type="submit"
                    class="w-full bg-indigo-600 text-white py-2 rounded shadow-md hover:bg-indigo-700">
                Se connecter
            </button>
        </form>
    </div>
    <p>Vous n'avez pas de  compte ? <a href="{{ path('app_register') }}" class="text-indigo-600 hover:underline">S'inscrire</a></p>
</div>
{% endblock %}
