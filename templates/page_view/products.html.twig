{% extends 'base.html.twig' %}

{% block title %} 
Village Green | Nos Instruments 
{% endblock %}

{% block body %}
<div class="m-4 p-4 rounded-xl shadow-xl bg-gray-50">
  <!-- Section Title -->
  <div class="text-center text-black">
    <h1 class="text-5xl font-serif font-bold py-6">Tous nos Instruments</h1>
  </div>
  
  <!-- Products Grid -->
  <div class="grid grid-cols-1 sm:grid-cols-2 md:grid-cols-3 gap-6">
    {% for product in products %}
        <div class="bg-white rounded-lg shadow-lg p-6 hover:shadow-xl transition-shadow duration-300">
            <!-- Product Title -->
            <h2 class="text-2xl font-bold text-gray-800 mb-4">{{ product.prodLabel }}</h2>
            
            <!-- Product Image -->
            {% for image in product.img %}
                <img src="{{ image.prodImg }}" alt="Image de {{ product.prodLabel }}" class="w-full h-48 object-cover rounded-lg mb-4">
            {% endfor %}
            
            <!-- Product Description -->
            <p class="text-gray-600 mb-4">{{ product.prodDesc }}</p>
            
            <!-- Product Price -->
            <p class="text-lg font-semibold text-gray-800 mb-4">{{ product.prodPrice }} â‚¬</p>
            
            <!-- Product Rubric -->
            <p class="text-sm text-gray-500">Rubrique : <span class="font-medium">{{ product.rubric.rubLabel }}</span></p>
        </div>
    {% endfor %}
  </div>
</div>
{% endblock %}
